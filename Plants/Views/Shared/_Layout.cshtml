<!DOCTYPE html>
<html lang="en">


    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Greenthumb - @ViewData["Title"]</title>

        <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
        <link rel="manifest" href="/favicon/site.webmanifest">

        <link rel="stylesheet" href="~/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/bootstrap-grid.css" />
        <link rel="stylesheet" href="~/css/bootstrap-reboot.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </head>


    <body class="bg-dark-5">

        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-green mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-page="/Search">Greenthumb</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <partial name="_LoginPartial" />
                        <ul class="navbar-nav flex-grow-1"></ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container text-center">
            <main role="main" class="pb-3 col">
                @*<h1>ASP.NET Core Razor Pages - Pagination Example</h1>*@
                @RenderBody()
            </main>
        </div>

        <footer class="footer text-muted">
            <div class="container">
                &copy; 2020 - Greenthumb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @RenderSection("Scripts", required: false)

    </body>
</html>